# ScreenControl Web Production Environment
# Copy this to .env and fill in your values

# Database connection
DATABASE_URL="postgresql://user:password@localhost:5432/screencontrol?schema=public"

# NextAuth configuration
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="generate-a-secure-random-string-here"

# Email server (for password reset, notifications)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_FROM="screencontrol@your-domain.com"
# Optional: uncomment if your SMTP requires auth
# EMAIL_SERVER_USER="smtp-user"
# EMAIL_SERVER_PASSWORD="smtp-password"

# Application settings
NODE_ENV="production"
APP_URL="https://your-domain.com"
PORT="3002"

# Debug mode (set to false in production)
DEBUG_MODE="false"
