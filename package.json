{
  "name": "mcp-eyes",
  "version": "1.1.12",
  "description": "ðŸš€ Professional cross-platform MCP server for GUI automation with Apple Accessibility and AI-powered analysis. Features 2 streamlined variants: Basic (Apple Accessibility + Screenshots) and Advanced (All Features: AI, OCR, Web Detection, Text Input). Supports macOS, Windows, and Linux with intelligent UI detection, natural language interaction, and hybrid analysis methods. Compatible with Cursor, Claude, and other MCP-compatible AI assistants.",
  "main": "dist/basic-server.js",
  "bin": {
    "mcp-eyes": "./dist/advanced-server-simple.js",
    "mcp-eyes-basic": "./dist/basic-server.js"
  },
  "scripts": {
    "build": "npm run update-version && tsc",
    "build:clean": "rimraf dist && npm run build",
    "dev": "tsc --watch",
    "start": "node dist/advanced-server-simple.js",
    "start:basic": "node dist/basic-server.js",
    "start:advanced": "node dist/advanced-server-simple.js",
    "test": "node tmp/test/test.js",
    "lint:md": "markdownlint *.md **/*.md --ignore node_modules --ignore tmp",
    "lint:md:fix": "markdownlint *.md **/*.md --ignore node_modules --ignore tmp --fix",
    "update-version": "node scripts/update-version.js",
    "bump-version": "node scripts/bump-version.js",
    "version:patch": "npm run bump-version patch",
    "version:minor": "npm run bump-version minor", 
    "version:major": "npm run bump-version major",
    "prepublishOnly": "npm run build:clean",
    "prepublishOnly:with-lint": "npm run build:clean && npm run lint:md",
    "publish:github": "./github_publish.sh",
    "publish:npm": "./npm_publish.sh"
  },
  "keywords": [
    "mcp",
    "cross-platform",
    "gui",
    "automation",
    "cursor",
    "ai",
    "screenshot",
    "mouse",
    "keyboard",
    "window-management",
    "multi-display",
    "claude",
    "ai-assistant",
    "desktop-automation",
    "nut-js",
    "screenshot-desktop",
    "gui-control",
    "natural-language",
    "macos",
    "windows",
    "linux",
    "powershell",
    "wmctrl",
    "ocr",
    "computer-vision",
    "ui-analysis",
    "browser-automation",
    "accessibility",
    "ai-analysis",
    "hybrid-analysis",
    "local-llm",
    "tesseract",
    "apple-window-manager"
  ],
  "author": "Richard Brown",
  "license": "MIT",
  "dependencies": {
    "@jxa/run": "^1.4.0",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "node-mac-permissions": "^1.0.0",
    "os": "^0.1.2",
    "platform": "^1.3.6",
    "screenshot-desktop": "^1.15.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "markdownlint-cli": "^0.33.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/datagram1/mcp-eyes.git"
  },
  "bugs": {
    "url": "https://github.com/datagram1/mcp-eyes/issues"
  }
