{
  "name": "screencontrol",
  "version": "1.1.15",
  "description": "Multi-tenant SaaS platform enabling AI/LLM systems to control remote computers. Features cross-platform agents (macOS, Windows, Linux), centralized control server, and full MCP protocol support for Claude.ai, Open WebUI, and local LLMs.",
  "main": "dist/screencontrol-mcp.js",
  "bin": {
    "screencontrol": "./dist/screencontrol-mcp.js",
    "screencontrol-proxy": "./dist/screencontrol-mcp.js",
    "screencontrol-agent": "./dist/agent-tools-server.js"
  },
  "scripts": {
    "build": "npm run update-version && tsc",
    "postbuild": "node scripts/set-executable.js",
    "build:clean": "rimraf dist && npm run build",
    "dev": "tsc --watch",
    "start": "node dist/screencontrol-mcp.js",
    "start:proxy": "node dist/screencontrol-mcp.js",
    "start:agent": "node dist/agent-tools-server.js",
    "test": "node test/run-all-tests.js",
    "test:unit": "node test/run-all-tests.js",
    "test:integration": "node test/run-all-tests.js --integration",
    "test:tools": "node test/run-all-tests.js",
    "test:fs": "node test/test-filesystem-tools.js",
    "test:shell": "node test/test-shell-tools.js",
    "test:registry": "node test/test-tool-registry.js",
    "test:mcp": "node test/test-mcp-tools.js",
    "test:proxy": "node test/test-proxy-tools.js",
    "test:validate": "node tests/validate-mcp-structure.js",
    "test:startup": "node tests/test-server-startup.js",
    "test:all": "npm run build && npm test && npm run test:validate",
    "test:ci": "npm run build && npm test",
    "lint:md": "markdownlint *.md **/*.md --ignore node_modules --ignore tmp",
    "lint:md:fix": "markdownlint *.md **/*.md --ignore node_modules --ignore tmp --fix",
    "update-version": "node scripts/update-version.js",
    "bump-version": "node scripts/bump-version.js",
    "version:patch": "npm run bump-version patch",
    "version:minor": "npm run bump-version minor",
    "version:major": "npm run bump-version major",
    "prepublishOnly": "npm run build:clean",
    "prepublishOnly:with-lint": "npm run build:clean && npm run lint:md",
    "publish:github": "./github_publish.sh",
    "publish:npm": "./npm_publish.sh"
  },
  "keywords": [
    "mcp",
    "cross-platform",
    "gui",
    "automation",
    "cursor",
    "ai",
    "screenshot",
    "mouse",
    "keyboard",
    "window-management",
    "multi-display",
    "claude",
    "ai-assistant",
    "desktop-automation",
    "nut-js",
    "screenshot-desktop",
    "gui-control",
    "natural-language",
    "macos",
    "windows",
    "linux",
    "powershell",
    "wmctrl",
    "ocr",
    "computer-vision",
    "ui-analysis",
    "browser-automation",
    "accessibility",
    "ai-analysis",
    "hybrid-analysis",
    "local-llm",
    "tesseract",
    "apple-window-manager",
    "open-webui",
    "sse",
    "server-sent-events"
  ],
  "author": "Richard Brown",
  "license": "MIT",
  "dependencies": {
    "@jxa/run": "^1.4.0",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "fast-glob": "^3.3.3",
    "fastest-levenshtein": "^1.0.16",
    "node-mac-permissions": "^1.0.0",
    "os": "^0.1.2",
    "platform": "^1.3.6",
    "screenshot-desktop": "^1.15.0",
    "sharp": "^0.33.5",
    "tesseract.js": "^6.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.1",
    "markdownlint-cli": "^0.33.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/datagram1/mcp-eyes.git"
  },
  "bugs": {
    "url": "https://github.com/datagram1/mcp-eyes/issues"
  }
}
